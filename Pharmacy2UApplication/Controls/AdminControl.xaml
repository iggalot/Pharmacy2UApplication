<local:BaseControl x:Class="Pharmacy2UApplication.AdminControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             >
    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- Title -->
            <TextBlock Text="ADMINISTRATION" Background="LightBlue"/>

            <!-- Order Status -->
            <Button Command="{Binding Path=AdminOTCMedicationEditCommand}" Content="OTC Medication Admin" />
            <Button Command="{Binding Path=AdminFoodEditCommand}" Content="Food Admin" />
            <Button Command="{Binding Path=AdminPharmacyEditCommand}" Content="Pharmacy Admin" />
            <Button Command="{Binding Path=AdminDeliveryEditCommand}" Content="Delivery Admin" />

        </StackPanel>
    </Grid>
</local:BaseControl>
