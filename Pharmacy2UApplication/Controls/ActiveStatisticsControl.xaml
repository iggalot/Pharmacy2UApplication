<UserControl x:Class="Pharmacy2UApplication.ActiveStatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
            >
    <StackPanel Orientation="Horizontal" >
        <StackPanel Margin ="5" Orientation="Vertical" Background="LightGreen" VerticalAlignment="Center">
            <TextBlock Text="Active #"/>
            <TextBlock Text="Average Time"/>
        </StackPanel>
        <StackPanel Margin ="5" Orientation="Vertical" Background="LightPink" VerticalAlignment="Center">
            <TextBlock Text="Inactive #"/>
            <TextBlock Text="Average Time"/>
        </StackPanel>
        <StackPanel Margin ="5" Orientation="Vertical" Background="LightBlue" VerticalAlignment="Center">
            <TextBlock Text="Average Total Time"/>
        </StackPanel>

    </StackPanel>
</UserControl>
