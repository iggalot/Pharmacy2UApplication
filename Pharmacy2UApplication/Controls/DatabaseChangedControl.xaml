<UserControl x:Class="Pharmacy2UApplication.DatabaseChangedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border  
        Margin="20"
        Padding="10"
        CornerRadius="20"
        Background="Pink"
        Height="100"
        Visibility="{Binding DatabaseMonitor.DBHasChanged, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=True}">

        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding DatabaseMonitor.DBConnection.DBTitle}"
            FontSize="22"
            VerticalAlignment="Center"
            HorizontalAlignment="Center" />
            <TextBlock 
            VerticalAlignment="Center"
            HorizontalAlignment="Center" 
            Text="The Database has Changed" FontSize="14" />

            <Button Click="AcknowledgeButton_Click" 
                    Content="Acknowledge Notification" 
                    Width="300"
                    FontSize="18"/>
        </StackPanel>
    </Border>

</UserControl>
