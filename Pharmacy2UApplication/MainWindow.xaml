<Window x:Class="Pharmacy2UApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy2UApplication"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        MinWidth="500" MinHeight="300"
        Title="MainWindow">
    <Border Background="LightGoldenrodYellow" >
        <!-- Initialize -->
        <StackPanel Orientation="Horizontal">
            <Border Background="LightSlateGray">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <local:OrderStatusControl />
                    <local:AdminControl />
                </StackPanel>
            </Border>
            <Border Background="LightGoldenrodYellow">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <local:ActiveStatisticsControl />
                    <local:OrderInformationControl />
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
