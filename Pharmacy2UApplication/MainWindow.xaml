<Window x:Class="Pharmacy2UApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy2UApplication"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Icon="Images/DeaconessLogo.ico"
        Title="Pharmacy 2U Application">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,0,0,0.5">
            <TextBlock Text="NAV BAR" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Initialize -->
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,26,0,0.5" Grid.RowSpan="2">
            <Border Background="LightSlateGray">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <local:OrderStatusControl />
                    <local:AdminControl />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal">
                <Border Background="LightGoldenrodYellow" Height="Auto">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <local:ActiveStatisticsControl />
                        <local:OrderInformationControl />
                    </StackPanel>
                </Border>
                <Border>
                    <!-- Our database activity window -->
                    <local:DatabaseActivityControl />
                </Border>
                
            </StackPanel>
        </StackPanel>

        <!-- Status Info -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Background="Gray" Grid.ColumnSpan="2" Margin="0,191.5,0,0.5" Grid.RowSpan="2">
            <TextBlock Text="STATUS BAR HERE" FontSize="12" HorizontalAlignment="Left" Width="Auto"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Database" FontSize="12"/>
                <Button Content="Seed" Command="{Binding SQLServerConnection.DBCreateCommand}" Height="20" Width="100"/>
                <Button Content="Clear" Command="{Binding SQLServerConnection.DBClearCommand}" Height="20" Width="100"/>
                <Button Content="Display" Command="{Binding SQLServerConnection.DBDisplayCommand}" Height="20" Width="100"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
