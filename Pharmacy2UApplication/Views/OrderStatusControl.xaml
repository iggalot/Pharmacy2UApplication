<UserControl x:Class="Pharmacy2UApplication.OrderStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
             >
    <Border>
        <StackPanel Orientation="Vertical">
            <!-- Title -->
            <TextBlock Text="ORDER STATUS" Background="LightBlue"/>

            <!-- Order Status -->
            <TextBlock Text="New Orders" />
            <TextBlock Text="Ready For Payment" />
            <TextBlock Text="Ready For Packaging" />
            <TextBlock Text="Ready For Delivery" />
            <TextBlock Text="Out For Delivery" />
            <TextBlock Text="Returned - Not Delivered" />
            <TextBlock Text="Completed" />
        </StackPanel>

        
    </Border>
</UserControl>
