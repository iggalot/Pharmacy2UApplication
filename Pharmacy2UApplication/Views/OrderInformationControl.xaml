<UserControl x:Class="Pharmacy2UApplication.OrderInformationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Order Information" Background="LightBlue"/>


        <TextBlock Grid.Row="1" 
            Height="300"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Text="ORDER INFO GOES HERE" 
            FontSize="24"/>
    </Grid>
</UserControl>
