<UserControl x:Class="Pharmacy2UApplication.DatabaseActivityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" >
    <Border>
        <StackPanel Orientation="Vertical">
            <!-- Title -->
            <TextBlock Text="DataBase Activity" Background="LightBlue"/>

            <!-- Database Activity Status -->
            <TextBlock x:Name="DBActivity" Text="Activity Messages Here"/>
        </StackPanel>
    </Border>
</UserControl>
