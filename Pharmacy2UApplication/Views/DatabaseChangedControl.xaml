<UserControl x:Class="Pharmacy2UApplication.DatabaseChangedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid 
        Height="100"
        Background="Pink"
        Visibility="{Binding DBHasChanged, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=True}">
        <TextBlock 
            VerticalAlignment="Center"
            HorizontalAlignment="Center" 
            Text="The Database has Changed" FontSize="22" />
    </Grid>
</UserControl>
