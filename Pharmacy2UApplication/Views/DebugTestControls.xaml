<UserControl x:Class="Pharmacy2UApplication.DebugTestControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy2UApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Debug Test Tools" FontSize="24"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Database" FontSize="12"/>
            <Button Content="Seed" Command="{Binding SQLServerConnection.DBCreateCommand}" Height="20" Width="100"/>
            <Button Content="Clear" Command="{Binding SQLServerConnection.DBClearCommand}" Height="20" Width="100"/>
            <Button Content="Display" Command="{Binding SQLServerConnection.DBDisplayCommand}" Height="20" Width="100"/>
            <Button Content="AddSingleRecord" Command="{Binding SQLServerConnection.DBAddSingleRecord}" Height="20" Width="100"/>
        </StackPanel>

        <Button Content="SwitchPage" Click="SwitchPageTestButton_Click"/>
    </StackPanel>

</UserControl>
