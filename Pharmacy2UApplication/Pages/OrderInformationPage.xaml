<animate:BasePageAnimation x:Class="Pharmacy2UApplication.OrderInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy2UApplication"
      xmlns:animate="clr-namespace:Pharm2UAnimations;assembly=Pharm2UAnimations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"

      Title="OrderInformationPage">

    <Grid x:Name="ContentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Order Information" Background="LightBlue"/>

        <!-- The results of our order information -->
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Visible"
            HorizontalScrollBarVisibility="Visible">

                <local:FullOrderInformationControl />


        </ScrollViewer>
    </Grid>
</animate:BasePageAnimation>
