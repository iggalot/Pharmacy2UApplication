<local:BasePage x:Class="Pharmacy2UApplication.OrderInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy2UApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinWidth="400"
      MinHeight="300"
      Title="OrderInformationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Order Information" Background="LightBlue"/>

        <!-- The results of our order information -->
        <local:OrderInformationControl Grid.Row="1"/>
    </Grid>
</local:BasePage>
