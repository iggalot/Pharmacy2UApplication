<Application x:Class="Pharmacy2UApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pharmacy2UApplication"             
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important here -->
                <ResourceDictionary Source="pack://application:,,,/Pharm2UStyles;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pharm2UStyles;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pharm2UStyles;component/Styles/Buttons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pharm2UStyles;component/Styles/Texts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pharm2UStyles;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pharm2UStyles;component/Styles/Window.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
